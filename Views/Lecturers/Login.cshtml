<!-- Full-width container with a professional and centered layout -->
<div class="container-fluid py-5" style="min-height: 100vh; background-color: #f8f9fa;">
    <div class="container" style="max-width: 500px;">
        <!-- Centered card-style login form -->
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white text-center">
                <h2 class="mb-0" style="font-weight: bold;">Login</h2>
            </div>
            <div class="card-body">
                <!-- Display error message if present -->
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center" role="alert">
                        @ViewBag.Error
                    </div>
                }

                <!-- Login form -->
                <form asp-action="Login" method="post">
                    <div class="form-group mb-3">
                        <label for="email" class="form-label" style="font-weight: 500;">Email</label>
                        <input type="email"
                               name="email"
                               class="form-control form-control-lg"
                               placeholder="Enter your email"
                               required />
                    </div>
                    <div class="form-group mb-4">
                        <label for="password" class="form-label" style="font-weight: 500;">Password</label>
                        <input type="password"
                               name="password"
                               class="form-control form-control-lg"
                               placeholder="Enter your password"
                               required />
                    </div>
                    <!-- Submit button -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center text-muted">
                <small>Don't have an account? <a href="/Register" class="text-primary">Register here</a></small>
            </div>
        </div>
    </div>
</div>
