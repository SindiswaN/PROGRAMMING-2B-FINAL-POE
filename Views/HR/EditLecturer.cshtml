@model Contract_Monthly_Claim_System_POE.Models.Lecturer

<h2>Edit Lecturer</h2>

<form asp-action="EditLecturer" method="post">
    <div class="form-group">
        <label for="FirstName">First Name</label>
        <input type="text" name="FirstName" value="@Model.FirstName" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="LastName">Last Name</label>
        <input type="text" name="LastName" value="@Model.LastName" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" name="Email" value="@Model.Email" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
