<!-- Full-width container with a clean and professional look -->
<div class="container-fluid py-5" style="min-height: 100vh; background-color: #f8f9fa;">
    <!-- Centered content with a welcoming heading -->
    <div class="container text-center">
        <h1 class="mb-4 text-primary" style="font-weight: bold; font-size: 3rem;">HR Dashboard</h1>
        <p class="lead text-muted mb-5" style="font-size: 1.25rem;">Welcome to the HR Dashboard. Manage lecturers and generate reports with ease.</p>

        <!-- Buttons in a horizontal alignment for better UX -->
        <div class="d-flex justify-content-center gap-3">
            <a asp-action="ManageLecturers" class="btn btn-lg btn-primary px-4 py-2 shadow">
                <i class="fas fa-users"></i> Manage Lecturers
            </a>
            <form asp-action="GenerateReport" method="post" style="margin: 0;">
                <button type="submit" class="btn btn-lg btn-success px-4 py-2 shadow">
                    <i class="fas fa-file-alt"></i> Generate Monthly Report
                </button>
            </form>
            <form asp-action="GenerateInvoice" method="post" style="margin: 0;">
                <button type="submit" class="btn btn-lg btn-info px-4 py-2 shadow">
                    <i class="fas fa-file-invoice"></i> Generate Invoice
                </button>
            </form>
        </div>
    </div>
</div>
